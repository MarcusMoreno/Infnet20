@model InfnetMovieDataBase.Domain.Genero

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Genero</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    <hr />
    <h4>Filmes</h4>
    <dl class="row">
        @foreach (var filme in Model.Filmes)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => filme.Titulo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(x => filme.Titulo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => filme.TituloOriginal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(x => filme.TituloOriginal)
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", "Genero", new { id = Model.Id }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Back", "Index", "Genero", null, new { @class = "btn btn-secondary" })
</div>
