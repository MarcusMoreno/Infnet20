@model SistemaDeAvaliacao.Application.ViewModel.AvaliacaoViewModel
@{
    ViewBag.Title = "Details";
    ViewBag.Icon = "fa fa-question-circle";
    ViewBag.PageHeader = "Detalhe da Avaliação";
    ViewBag.PageDescription = "Avaliação" + " " + Model.AvaliacaoId;

    var breadCrumbArray = new string[] { "Avaliação", ViewBag.PageHeader };
    ViewBag.Path = breadCrumbArray;
}

<div class="box box-primary">
    <div class="box-header">
    </div>
    <div class="box-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.CodigoAcesso)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CodigoAcesso)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Objetivo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Objetivo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataInicio)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DataInicio)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataTermino)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DataTermino)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Curso)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Curso)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TurmaId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TurmaId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Professor)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Professor)
            </dd>

        </dl>
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Lista de Questões</h3>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Descrição
                            </th>
                            <th>
                                Categoria
                            </th>
                        </tr>

                        @foreach (var item in Model.Questoes)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QuestaoId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Categoria.Descricao)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="box-footer">
        @Html.ActionLink("Voltar", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
        <a href="@Url.Action("Edit", "Avaliacao", new { id = Model.AvaliacaoId})" class="btn btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i>  Editar</a>
    </div>
</div>

