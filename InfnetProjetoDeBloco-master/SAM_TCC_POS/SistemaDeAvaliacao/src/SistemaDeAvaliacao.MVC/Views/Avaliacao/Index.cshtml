@model IEnumerable<SistemaDeAvaliacao.Application.ViewModel.AvaliacaoViewModel>

@{
    ViewBag.Title = "Index";
    ViewBag.Icon = "fa fa-list-ul";
    ViewBag.PageHeader = "Avaliações";
    ViewBag.PageDescription = "Manutenção do cadastro de Avaliações";
    var breadCrumbArray = new string[] { ViewBag.PageHeader };
    ViewBag.Path = breadCrumbArray;
}
<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">Lista de Avaliações</h3>
    </div>
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AvaliacaoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Objetivo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataInicio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataTermino)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Curso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TurmaId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Professor)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AvaliacaoId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Objetivo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataTermino)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Curso)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TurmaId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Professor)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.AvaliacaoId }, htmlAttributes: new { @class = "btn-sm btn-warning" })
                            @Html.ActionLink("Details", "Details", new { id = item.AvaliacaoId }, htmlAttributes: new { @class = "btn-sm btn-info" })
                            @Html.ActionLink("Responder", "Responder", new { matricula = 1234, codigoDeAcesso = item.CodigoAcesso }, htmlAttributes: new { @class = "btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="box-footer">
        <a href="@Url.Action("Create", "Avaliacao", null)" class="btn btn-primary pull-right"><i class="fa fa-plus" aria-hidden="true"></i>  Nova Avaliação</a>
    </div>
</div>
