@using SistemaDeAvaliacao.Infra.CrossCutting.Identity.Model
@model SistemaDeAvaliacao.Infra.CrossCutting.Identity.Model.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout_adminLTELogin.cshtml";
}
@{
    ViewBag.Title = "Login";
}
<div class="login-logo">
    <span class="logo-lg"><i class="fa fa-graduation-cap" aria-hidden="true"></i> S.A.M.</span>
</div>
<!-- /.login-logo -->
<div class="login-box-body">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Utilize uma conta local para login.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group has-feedback">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group has-feedback">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class=" col-md-offset-1 col-xs-7">
                <div class="checkbox icheck">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>
            <!-- /.col -->
            <div class="col-xs-4">
                <input type="submit" value="Login" class="btn btn-primary btn-block btn-flat" />
            </div>
            <!-- /.col -->
        </div>
        <p>
            @Html.ActionLink("Registrar uma nova conta?", "Register")
        </p>
        <p>
            @Html.ActionLink("Esqueceu sua senha?", "ForgotPassword")
        </p>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}