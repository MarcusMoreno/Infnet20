@model SistemaDeAvaliacao.Application.ViewModel.QuestaoCategoriaViewModel

@{
    ViewBag.Title = "Delete";
    ViewBag.PageHeader = "Apagar Categoria";
    ViewBag.PageDescription = Model.Descricao;

    var breadCrumbArray = new string[] { "Categoria", ViewBag.PageHeader };
    ViewBag.Path = breadCrumbArray;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-red"><i class="fa fa-exclamation-triangle"></i></span>
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger alert-dismissible" })
            <div class="info-box-content">
                <h1>Você deseja realmente apagar esta Categoria?</h1>
                <div class="clearfix"></div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>
                </dl>
                <hr />



                <div class="form-actions no-color text-right">
                    <input type="submit" value="Apagar" class="btn btn-danger" />
                    @Html.ActionLink("Cancelar", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                </div>

            </div>

            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
}