@model IEnumerable<SistemaDeAvaliacao.Application.ViewModel.QuestaoCategoriaViewModel>

@{
    ViewBag.Title = "Index";
    ViewBag.Icon = "fa fa-info-circle";
    ViewBag.PageHeader = "Categorias";
    ViewBag.PageDescription = "Manutenção do cadastro de categorias";
    var breadCrumbArray = new string[] { ViewBag.PageHeader };
    ViewBag.Path = breadCrumbArray;
}
<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">Lista de Categorias</h3>
    </div>
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CategoriaId)</th>
                    <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoriaId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.CategoriaId }, htmlAttributes: new { @class = "btn-sm btn-warning" }) 
                            @Html.ActionLink("Details", "Details", new { id = item.CategoriaId }, htmlAttributes: new { @class = "btn-sm btn-info" }) 
                            @Html.ActionLink("Delete", "Delete", new { id = item.CategoriaId }, htmlAttributes: new { @class = "btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="box-footer">
        <a href="@Url.Action("Create", "QuestaoCategoria", null)" class="btn btn-primary pull-right"><i class="fa fa-plus" aria-hidden="true"></i>  Nova Categoria</a>
    </div>
</div>