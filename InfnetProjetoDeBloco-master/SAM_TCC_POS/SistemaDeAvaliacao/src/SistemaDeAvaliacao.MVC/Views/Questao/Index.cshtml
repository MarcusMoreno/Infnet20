@model IEnumerable<SistemaDeAvaliacao.Application.ViewModel.QuestaoViewModel>

@{
    ViewBag.Title = "Index";
    ViewBag.Icon = "fa fa-question-circle";
    ViewBag.PageHeader = "Questões";
    ViewBag.PageDescription = "Manutenção do cadastro de questões";
    var breadCrumbArray = new string[] { ViewBag.PageHeader };
    ViewBag.Path = breadCrumbArray;
}
<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">Lista de Questões</h3>
    </div>
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.QuestaoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuestaoId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.Descricao)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.QuestaoId }, htmlAttributes: new { @class = "btn-sm btn-warning" }) 
                            @Html.ActionLink("Details", "Details", new { id = item.QuestaoId }, htmlAttributes: new { @class = "btn-sm btn-info" }) 
                            @Html.ActionLink("Delete", "Delete", new { id = item.QuestaoId }, htmlAttributes: new { @class = "btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="box-footer">
            <a href="@Url.Action("Create", "Questao", null)" class="btn btn-primary pull-right"><i class="fa fa-plus" aria-hidden="true"></i>  Nova Questão</a>
        </div>
    </div>
</div>
        
